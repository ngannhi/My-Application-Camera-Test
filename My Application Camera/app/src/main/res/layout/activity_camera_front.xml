<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.CameraFrontActivity">

    <FrameLayout
        android:id="@+id/framelayout_camera_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left">
            <ImageButton
                android:id="@+id/btnImageFront"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/picture"
                android:background="@android:color/transparent"
                android:layout_marginLeft="40dp"/>
            />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCameraFront"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/camera">

        </ImageButton>
        <ImageButton
            android:id="@+id/btnCameraChangeFront"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:src="@drawable/change_camera"
            android:layout_marginLeft="40dp"/>
</LinearLayout>
</LinearLayout>